<div is="flynt-layout-multiple-posts" class="flyntComponent">
  <section class="pageWrapper">
    <header class="mainHeader">
      {{ area('mainHeader') }}
    </header>
    <main class="mainContent" role="main">
      {% if passwordProtected %}
        {{ passwordForm }}
      {% else %}
        <h1>
          {% if isSearch %}
            {{ posts|length }} {{ __('Search results for', 'flynt-starter-theme') }} „{{ searchQuery }}“
          {% else %}
            {{ post.title }}
          {% endif %}
        </h1>
        {{ area('pageComponents') }}
      {% endif %}
    </main>
    <footer class="mainFooter">
      {{ area('mainFooter') }}
    </footer>
  </section>
</div>
