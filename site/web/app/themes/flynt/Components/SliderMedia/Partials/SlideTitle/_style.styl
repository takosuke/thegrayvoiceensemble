.slideTitle
  text-align: center
  width: 100%

  &-isHidden
    display: none

  &--overlayTitleTop // title overlays the media
    position: absolute
    top: 15px // Offset of the title to the edges of the slider
    z-index: 2

  &--overlayTitleBottom
    bottom: 15px // Offset of the title to the edges of the slider
    position: absolute
    z-index: 2

  &-content
    background: #fff
    display: inline-block
    padding: 10px
