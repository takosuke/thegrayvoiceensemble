$rupture.scale = lookup('$globalRuptureScale') || (0 575px 767px 991px 1199px)
$rupture.anti-overlap = lookup('$globalRuptureAntiOverlap') || -1px
$containerPadding = lookup('$globalContainerPadding') || 15px
$containerMaxWidth = lookup('$globalContainerMaxWidth') || 1140px

.flyntComponent[is="flynt-block-gallery"]
  *,
  *:before,
  *:after
    box-sizing: border-box

  #gallery
    padding-top: 40px
    @media screen and (min-width: 991px)
      padding: 60px 30px 0 30px
  .container
    center($containerMaxWidth, $containerPadding)
  .row
    display: flex
    flex-wrap: wrap
    padding-top: 40px
    padding-bottom: 40px
  .image
    margin-right: 20px
    &:hover
      cursor: pointer
  .img-wrapper
    position: relative
    width: 130px
    height: 90px
    margin-bottom: 10px
    background-size: cover !important
    background-repeat: no-repeat !important
    background-position: center center !important
    a
      img
        display: none
  .img-overlay
    background: rgba(0, 0, 0, 0.7)
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0
    display: flex
    justify-content: center
    align-items: center
    opacity: 0
    i
      color: #fff
      font-size: 3em
  #overlay
    background: #fff
    width: 100%
    height: 100%
    position: fixed
    top: 0
    left: 0
    display: flex
    justify-content: center
    align-items: center
    z-index: 999
    flex-wrap: wrap
    // Removes blue highlight
    -webkit-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    user-select: none
    img
      margin: 0
      max-width: 90%
      height: 600px
      object-fit: contain
      padding-left: 5%
      padding-right: 5%
      @media screen and (min-width: 768px)
        width: 80%
      @media screen and (min-width: 1200px)
        width: 90%
  #nextButton
    color: #000
    font-size: 2em!important
    transition: opacity 0.8s
    background: url(../../Components/DocumentDefault/assets/arrow-right2.png)
    width: 30px
    height: 30px
    position: absolute
    right: 40px
    top: 50%
    &:hover
      opacity: 0.7
    @media screen and (min-width: 768px)
      font-size: 3em
  #prevButton
    color: #000
    font-size: 2em!important
    transition: opacity 0.8s
    background: url(../../Components/DocumentDefault/assets/arrow-right2.png)
    width: 30px
    height: 30px
    position: absolute
    left: 40px
    top: 50%
    transform: rotate(180deg);
    &:hover
      opacity: 0.7
    @media screen and (min-width: 768px)
      font-size: 3em
  .caption
    width: 100%
