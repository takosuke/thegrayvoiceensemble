<div is="flynt-layout-single-post" class="flyntComponent" style="background-color: {{ style_options.background_color }};">
  <section class="pageWrapper"  style="line-height: {{ style_options.line_height }}px; background-color: {{ style_options.background_color }}; color: {{ style_options.font_color }}; font-size: {{ style_options.font_size }}px; font-family: {{ style_options.font }}">
    <header class="mainHeader">
      {{ area('mainHeader') }}
    </header>
    <main class="mainContent" role="main">
      {% if passwordProtected %}
        {{ passwordForm }}
      {% else %}
        {{ area('pageComponents') }}
      {% endif %}
    </main>
    <footer class="mainFooter">
      {{ area('mainFooter') }}
    </footer>
  </section>
</div>
