<div is="flynt-layout-single-post" class="flyntComponent">
  <section class="pageWrapper">
    <header class="mainHeader">
      {{ area('mainHeader') }}
    </header>
    <main class="mainContent" role="main">
      {% if passwordProtected %}
        {{ passwordForm }}
      {% else %}
        <h1>{{ post.title }}</h1>
        {{ area('pageComponents') }}
      {% endif %}
    </main>
    <footer class="mainFooter">
      {{ area('mainFooter') }}
    </footer>
  </section>
</div>
