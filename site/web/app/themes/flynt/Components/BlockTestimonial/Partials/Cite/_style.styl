.cite
  position: relative
  padding: 30px 0
  
  &:before, &:after
    content: ''
    position: absolute
    left: 50%
    transform: translateX(-50%)
    width: 33%
    height: 3px
    background: gray
  &:before
    top: 0
  &:after
   bottom: 0
  
  cite
    remFontSize(18px)
    color: $globalColorBrand
    text-align: center
