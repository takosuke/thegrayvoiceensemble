<div class="author">
  <img class="author-image" srcset="
    {{ image.src | resize(576) }} 576w,
    {{ image.src | resize(768) }} 768w,
    {{ image.src | resize(1110) }} 1110w,
    {{ image.src | resize(1440) }} 1440w"
    src="{{ image.src | resize(1110) }}"
    sizes="(min-width: 1140px) 1110px, calc(100vw - 30px)"
    alt="{{ image.alt }}">
  <span class="author-name"><strong>{{ author_name }}</strong></span>
  {% if author_infos %}
    <span class="author-infos">{{ author_infos }}</span>
  {% endif %}
  {% if image_copyright %}
    <span class="author-copyright">Foto: {{ image_copyright }}</span>
  {% endif %}
</div>